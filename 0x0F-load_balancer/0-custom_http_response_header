#!/usr/bin/env bash
#ckage repository and install Nginx
sudo apt-get update
sudo apt-get -y install nginx

# Configure firewall to allow requests through port 80
sudo ufw allow 'Nginx HTTP'

# Create necessary directories
sudo mkdir -p /var/www/html

# Set permissions for easy file creation
sudo chmod -R 755 /var/www/html

# Create the index page
echo 'Hello World!' | sudo tee /var/www/html/index.html >/dev/null

# Create a webpage for error 404
echo "Ceci n'est pas une page" | sudo tee /var/www/html/404.html >/dev/null

# Modify Nginx configuration to include custom header
sudo sed -i '/server_name _;/a \
	    add_header X-Served-By $hostname;' /etc/nginx/sites-enabled/default
	    
# Restart the web server after updating the settings
sudo service nginx restart!/usr/bin/env bash
